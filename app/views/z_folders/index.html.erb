<p id="notice"><%= notice %></p>

<h1>Listing folders</h1>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>Updated At</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% unless @folder.root? %>
      <tr>
        <td colspan="6"><%= link_to '..', z_folders_path(folder_id: @folder.folder_class.identifier) %></td>
      </tr>
    <% end %>
    <% @z_folders.each do |folder| %>
      <tr>
        <td><%= link_to folder.label, z_folders_path(folder_id: folder.identifier) %></td>
        <td><%= l(folder.updated_at) %></td>
        <td><%= l(folder.created_at) %></td>
        <td><%= link_to 'Show', folder %></td>
        <td><%= link_to 'Edit', edit_z_folder_path(folder) %></td>
        <td><%= link_to 'Destroy', folder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Folder', new_z_folder_path(folder_id: @folder.identifier) %>
